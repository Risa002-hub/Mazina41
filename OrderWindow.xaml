<Window x:Class="Mazina41.OrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mazina41"
        mc:Ignorable="d"
        Title="OrderWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="45"></RowDefinition>
            <RowDefinition Height="35"></RowDefinition>
            
            <RowDefinition Height="400"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Дата формирования заказа" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="15"></TextBlock>
        <DatePicker Grid.Column="1" Grid.Row="0"  FontSize="15" Name="StartDate"></DatePicker>
        <TextBlock Text="Дата доставки заказа" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="15"></TextBlock>
        <DatePicker Grid.Column="1" Grid.Row="1"  FontSize="15" Name="DeliveryDate"></DatePicker>
        <TextBlock Text="ФИО клиента" Grid.Row="2" Grid.Column="0" FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
        <TextBlock Name="ClientFIO" Grid.Row="2" Grid.Column="1" FontSize="15"></TextBlock>
        <TextBlock Text="Номер заказа" Grid.Row="3" Grid.Column="0" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
        <TextBlock   Name="OrderNumber" Grid.Row="3" Grid.Column="1" FontSize="15"></TextBlock>

        <ListView Name="ProductListView" Grid.Row="4" Grid.ColumnSpan="2">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition Width="800"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Image Width="200" Grid.Column="0" Grid.RowSpan="4"  Stretch="UniformToFill" HorizontalAlignment="Center">
                            <Image.Source>
                                <Binding Path="ProductPhotoPath">
                                    <Binding.TargetNullValue>
                                        <Image Source="/IMAGES/icon.ico" />
                                    </Binding.TargetNullValue>
                                </Binding>
                            </Image.Source>
                        </Image>
                        <TextBlock Text="{Binding ProductName}" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Left" FontSize="20" TextWrapping="Wrap"></TextBlock>
                        <TextBlock Text="Скидка" Grid.Column="2" Grid.Row="0" HorizontalAlignment="Right" FontSize="20"></TextBlock>
                        <TextBlock Text="{Binding ProductDiscountAmount, StringFormat={}{0}%}" Grid.Column="2" Grid.Row="2"  HorizontalAlignment="Center" FontSize="35"></TextBlock>

                        <TextBlock Text="{Binding ProductDescription}" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" FontSize="20"></TextBlock>
                        <TextBlock Text="{Binding ProductCost, StringFormat={}{0:0} рублей}" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Left" FontSize="20"></TextBlock>
                        <TextBlock Text="{Binding ProductManufacturer}" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="20"></TextBlock>
                        <StackPanel Grid.Column="3" Grid.RowSpan="4" Orientation="Horizontal" 
                           HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Button Content="-" Name="BtnMinus" Width="30" Height="30" 
                            Click="BtnMinus_Click" Margin="5"/>

                            <TextBlock Name="QuantityText" Text="{Binding ProductQuantityInStock}" 
                               Width="40" Height="30" FontSize="16"
                               TextAlignment="Center" VerticalAlignment="Center"
                               Background="LightGray" Margin="5"/>

                            <Button Content="+" Name="BtnPlus" Width="30" Height="30" 
                            Click="BtnPlus_Click" Margin="5"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <TextBlock Text="Пункт выдачи" Grid.Column="0" Grid.Row="5" FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
        
        <ComboBox Name="PickupCombo" Grid.Column="1" Grid.Row="5" DisplayMemberPath="PickUpPointAddress"></ComboBox>
        <Button Content="Сохранить" Name="Save2" Click="Save2_Click" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1" Grid.Row="6" ></Button>

    </Grid>
</Window>
