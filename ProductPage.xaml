<Page x:Class="Mazina41.ProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Mazina41"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProductPage"  FontFamily="Comic Sans MS">


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="65*"/>
            <ColumnDefinition Width="25"/>
            <ColumnDefinition Width="48*"/>
            <ColumnDefinition Width="48*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="30"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        
        <TextBlock Text="Вы авторизованы как " HorizontalAlignment="Left" FontSize="10"  Grid.Row="1"></TextBlock>
        <TextBox Name="FIOTB" Width="200"  FontSize="10" Grid.Column="1"  Grid.Row="1" HorizontalAlignment="Left"></TextBox>

        <StackPanel Orientation="Horizontal"  Grid.Row="2" >
            <TextBlock Text="Роль: " HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="10"></TextBlock>
            <TextBox Name="RoleTB" Width="100" FontSize="10"></TextBox>
        </StackPanel>

        <TextBlock Name="UserInfoTB" FontSize="15" Grid.ColumnSpan="3" Margin="0,0,25,0"/>

        <TextBlock Name="SearchTBl" Text="" Grid.Column="1" Grid.Row="3" FontSize="15" HorizontalAlignment="Left" VerticalAlignment="Center" Height="21" Width="0"/>

        <TextBlock Text="поиск по именованию" Grid.Column="1" Grid.Row="2" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center" Height="20" Width="164"/>
        <TextBox Name="TBoxSearch" Width="120" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Center" TextChanged="TBSearch_TextChanged" Height="19" Margin="65,0,0,0"/>

        <RadioButton Name="RButtonUp" Grid.Column="2" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Checked="RButtonUp_Checked" Height="14" Width="15"/>
        <TextBlock Text="по возрастанию стоимости" Grid.Column="3" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="14" Height="20" Width="184"/>
        <RadioButton Name="RButtonDown" Grid.Column="2" Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center" Checked="RButtonDown_Checked" Height="14" Width="15"/>
        <TextBlock Text="по убыванию стоимости" Grid.Column="3" Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="14" Height="19" Width="167"/>

        <TextBlock Text="фильтрация по скидке" Grid.Column="3" Grid.Row="2" FontSize="14" Grid.ColumnSpan="2" Margin="191,0,0,0"/>
        <ComboBox Name="ComboType" Width="120" Height="20" Grid.Column="3" Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Center" SelectionChanged="ComboType_SelectionChanged" Grid.ColumnSpan="2" Margin="191,0,0,0"/>

        <ListView Name="ProductListView" Grid.ColumnSpan="5" Grid.Row="4">
            <ListView.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Добавить к заказу" Click="MenuItem_Click_1"/>
                </ContextMenu>
            </ListView.ContextMenu>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="650"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="25"/>
                        </Grid.RowDefinitions>
                        <Image Grid.RowSpan="4" HorizontalAlignment="Left">
                            <Image.Source>
                                <Binding Path="ProductPhotoPath">
                                    <Binding.TargetNullValue>
                                        <ImageSource>
                                            IMAGES/picture.png
                                        </ImageSource>
                                    </Binding.TargetNullValue>
                                </Binding>
                            </Image.Source>
                        </Image>

                        <TextBlock Grid.Column="1" Grid.Row="0" Text="{Binding ProductName}" FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                        <TextBlock Grid.Column="1" Grid.Row="1" Text="{Binding ProductDescription}" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
                        <TextBlock Grid.Column="1" Grid.Row="2" Text="{Binding ProductManufacturer}" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                        <TextBlock Grid.Column="1" Grid.Row="3" Text="{Binding ProductCost, StringFormat={}{0:F0} руб.}" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>

                        <TextBlock Grid.Column="2" Grid.Row="1" Text="Скидка" FontSize="16" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="2" Grid.Row="2" Text="{Binding ProductDiscountAmount, StringFormat={}{0} %}" FontSize="16" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Name="ViewOrderBtn" Content="Просмотреть заказ" Grid.Row="3" HorizontalAlignment="Right" Click="Oreeder_Click" Visibility="Collapsed" FontSize="20"></Button>
    </Grid>
</Page>
