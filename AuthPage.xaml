<Page x:Class="Mazina41.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Mazina41"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="100"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Name="CaptchaPanel" Visibility="Collapsed">
            <TextBlock Name="captchaOneWord" FontSize="22" Margin="30,0,0,0"></TextBlock>
            <TextBlock Name="captchaTwoWord" FontSize="22" TextDecorations="Strikethrough" Margin="0,5,0,0"></TextBlock>
            <TextBlock Name="captchaThreeWord" FontSize="22" TextDecorations="Strikethrough"></TextBlock>
            <TextBlock Name="captchaFourWord" FontSize="22" TextDecorations="Strikethrough" Margin="0,10,0,0"></TextBlock>
        </StackPanel>
        
        <TextBox 
            Grid.Row="2" Grid.Column="1"
            Text="" Name="CaptchaTB" 
            Width="200" VerticalAlignment="Center" 
            HorizontalAlignment="left" Margin="10" Visibility="Collapsed" />

        <TextBlock Text="Логин" Grid.Row="0" Grid.Column="0" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
        <TextBlock Text="Пароль" Grid.Row="1" Grid.Column="0" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center" ></TextBlock>
        <TextBox Name="LoginTB" Grid.Row="0" Grid.Column="2" Width="250" Height="50"></TextBox>
        <TextBox Name="PassTB" Grid.Row="1" Grid.Column="2" Width="250" Height="50"></TextBox>
        <Button Content="Войти как гость" Name="GuestBtn" Click="GuestBtn_Click"  Grid.Row="2" Grid.Column="0" ></Button>
        <Button Content="Войти" Name="LoginBtn" Click="LoginBtn_Click" Grid.Row="2"  Grid.Column="2"></Button>
        
    </Grid>
</Page>
